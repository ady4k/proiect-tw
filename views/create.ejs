<!DOCTYPE html>
<html lang="ro">
<%- include('./fragmente/head.ejs') %>
<body>
<header id="page-header">
    <%- include('./fragmente/header.ejs') %>
</header>

<main id="page-main">
    <div id="adaugaVehicul">
        <form action="./create.ejs" method = "POST">
            <label for="marca">Marca masina:</label>
            <input type="text" id="marca" name="marca" required><br>
            <label for="model">Model masina:</label>
            <input type="text" id="model" name="model" required>
            <button>Adauga</button>
        </form>
    </div><br>
    <p>Autovehicule:</p>
    <div id="grid-container">
        <% if (masini.length > 0) { %>
          <% masini.forEach(masina => { %>
            <div class="grid-item">
                    <p><%= masina.marca %></p>
                    <p><%= masina.model %></p>

                <button class="sterge">[x]sterge</button>
            </div>
        <% }) %>
       <% } else { %>
         <p>Nu exista nici o masina inregistrata.</p>
        <% } %>
    </div>
</main>

<footer id="page-footer">
    <%- include('./fragmente/footer.ejs') %>
</footer>
</body>
</html>